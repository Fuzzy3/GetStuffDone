<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.oestbalmer.android.getstuffdone"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <activity android:name=".View.TaskManagerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".View.AddTaskActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name=".View.UserAccountActivity" android:launchMode= "singleInstance">
        </activity>
    </application>

</manifest>